<div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8">
  <div class="max-w-lg mx-auto">
    <h2 class="text-2xl font-bold text-center text-indigo-600 sm:text-3xl">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-8 space-y-6", class: "p-8 mt-6 mb-0 space-y-4 rounded-lg shadow-2xl") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :full_name, class: "text-sm font-medium" %><br />
        <%= f.text_field :full_name, autofocus: true, autocomplete: "email", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm" %>
      </div>
      <div class="field">
        <%= f.label :email, class: "text-sm font-medium" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "text-sm font-medium" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "text-sm font-medium" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-4 pr-12 text-sm border-gray-200 rounded-lg shadow-sm" %>
      </div>
      <div>
        <%= f.submit "Sign up", class: "block w-full px-5 py-3 my-5 text-sm font-medium text-white bg-indigo-600 rounded-lg" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
