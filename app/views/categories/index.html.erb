<div class="flex justify-around w-full mx-auto px-5 py-3 text-sm font-medium text-white bg-[#3778c2]">
  <h1 class="text-3xl font-bold border-yellow-400">Categories</h1>
  <%=  link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-auto px-5 py-3 text-sm font-medium text-white bg-blue-600 rounded-lg" %>
</div>
<div class="flex flex-col gap-1">
  <% @categories.each do |category| %>
    <%= link_to user_category_path(user_id: category.user_id, id: category.id), class: "m-5" do%>
      <div class="flex gap-5 p-8 border border-gray-200 shadow-sm rounded-xl">
        <%= image_tag category.icon, class: "h-16 w-16" %>
        <h2 class="flex-1 mt-4 text-lg font-medium text-gray-900"><%= category.name %></h2>
        <% sum = 0 %>
        <% category.operations.each do |operation|%>
          <% sum += operation.amount %>
        <% end %>
        <p class="flex-1 mt-4 text-md font-medium text-gray-900">Total: $<%= sum %></p>
      </div>
    <% end %>
  <% end %>
</div>
<%= link_to 'Create New Category', new_user_category_path(user_id: @user.id), class: "block w-11/12 mx-auto mb-5 px-5 py-3 text-sm font-medium text-white bg-[#5fb523] rounded-lg" %>
